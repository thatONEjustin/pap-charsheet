---
const nav = [
  { url: '/', label: 'Home'},
  { url: '/character-sheet', label: 'Character Sheet'},
];

function isActive(url: String) {
  return url == Astro.url.pathname ? 'active' : '';
}
---

<ul>
  {nav.map(item => <li><a href={item.url} class={isActive(item.url)}>{item.label}</a></li>)}
</ul>

<style>
  ul {
    @apply
      max-w-xl
      mx-auto
      flex
      flex-row
      py-4;

    li {
      @apply
        mr-2
        last:mr-0;
      
      a {
        &.active {
          @apply
            font-bold;
        }
      }
    }
  }
</style>